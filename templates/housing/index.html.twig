{% extends 'base.html.twig' %}

{% block title %}Housing index{% endblock %}

{% block body %}
    <h1>Housing index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lot</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for housing in housings %}
            <tr>
                <td>{{ housing.id }}</td>
                <td>{{ housing.lot }}</td>
                <td>{{ housing.type }}</td>
                <td>
                    <a href="{{ path('housing_show', {'id': housing.id}) }}">show</a>
                    <a href="{{ path('housing_edit', {'id': housing.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('housing_new') }}">Create new</a>
{% endblock %}
